{
  "schema": "http://json-schema.org/draft-07/schema#",
  "type": "Film Reference",
  "description": "This is a citation of a film.",
  "items": {
    "required": ["film-title", "film-director", "film-year"],
    "additionalProperties": false,
    "properties": {
      "film-title": {
        "type": "string",
        "title": "film-title",
        "description": "Title of the film",
        "examples": "Joker"
      },
      "film-director": {
        "type": "string",
        "title": "film-director",
        "description": "Director of the film",
        "examples": "Todd Phillips"
      },
      "film-year": {
        "type": "integer",
        "title": "film-year",
        "description": "Year the film was officially released",
        "examples": [2004, 2019]
      }
    }
  }
}
